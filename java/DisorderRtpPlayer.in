set -e

# Find Java
if test -z "$JAVA"; then
  if test -z "$JAVA_HOME"; then
    if test -x /usr/libexec/java_home; then
      JAVA_HOME="`/usr/libexec/java_home`"
    fi
  fi
  if test -z "$JAVA_HOME"; then
    JAVA=java
  else
    JAVA="$JAVA_HOME/bin/java"
  fi
fi

exec "$JAVA" -cp "jardir/disorder.jar" DisorderRtpPlayer "$@"
